steps:
  # Build the Docker image
  - name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', 'gcr.io/$PROJECT_ID/pubsub-pull-app', '.']

  # Push the Docker image to Google Container Registry (GCR)
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/pubsub-pull-app']

  # Deploy the application to Google Cloud Run
  - name: 'gcr.io/google-cloud-sdk'
    entrypoint: 'gcloud'
    args:
      - 'run'
      - 'deploy'
      - 'pubsub-pull-service'
      - '--image'
      - 'gcr.io/$PROJECT_ID/pubsub-pull-app'
      - '--platform'
      - 'managed'
      - '--region'
      - 'asia-south1' # Change to your desired region
      - '--set-env-vars'
      - 'GOOGLE_CLOUD_PROJECT=$PROJECT_ID,PUBSUB_SUBSCRIPTION_ID=YOUR_SUBSCRIPTION_ID' # Replace YOUR_SUBSCRIPTION_ID
      - '--min-instances'
      - '1'
    # Optional: Specify service account if needed
    # securityContext:
    #   runAsUser: 'YOUR_SERVICE_ACCOUNT_EMAIL'

options:
  logging: CLOUD_LOGGING_ONLY
