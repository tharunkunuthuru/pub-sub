steps:
  # Build the Docker image
  - name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', 'gcr.io/$PROJECT_ID/pubsub-pull-app', '.']
    env:
      - 'DOCKER_BUILDKIT=1'

  # Push the Docker image to Google Container Registry (GCR)
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/pubsub-pull-app']

  # Deploy the application to Google Cloud Run
  - name: 'gcr.io/google-cloud-sdk'
    entrypoint: 'gcloud'
    args:
      - 'run'
      - 'deploy'
      - 'pubsub-pull-app'
      - '--image'
      - 'gcr.io/$PROJECT_ID/pubsub-pull-app'
      - '--region'
      - 'europe-west1'
      - '--platform'
      - 'managed'
      # - '--allow-unauthenticated' # Consider security implications
      - '--set-env-vars'
      - 'GOOGLE_CLOUD_PROJECT=$PROJECT_ID,PUBSUB_SUBSCRIPTION_ID=first-sub-1595'
      - '--min-instances'
      - '1' # Ensure at least one instance is running to pull
options:
  logging: CLOUD_LOGGING_ONLY
